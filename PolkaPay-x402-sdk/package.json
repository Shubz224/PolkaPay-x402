{
  "name": "@polkapay/sdk",
  "version": "0.1.0",
  "description": "Payment SDK for Polkadot AssetHub USDC transfers",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "transfer": "tsx src/transfer-usdc.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test:phase3": "tsx src/index-phase3.ts",
    "papi:add": "npx papi add assethub -n polkadot_asset_hub",
    "papi:generate": "npx papi"
  },
  "dependencies": {
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@polkadot/keyring": "^13.5.8",
    "@polkadot/util": "^13.5.8",
    "@polkadot/util-crypto": "^13.5.8",
    "polkadot-api": "^1.17.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
